@model IEnumerable<Assignment_3_Pruthvirajsinh.Models.Class>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 0;
    }

    #containerlist {
        max-width: 600px;
        margin: auto;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
        padding: 20px;
        margin-top: 20px;
    }

    h2 {
        color: #4CAF50;
        text-align: center;
        margin-bottom: 20px;
    }

    form {
        text-align: center;
        margin-bottom: 20px;
    }

    input[type="text"], input[type="submit"] {
        padding: 10px;
        margin: 5px;
    }

    .listitem {
        background-color: #f4f4f4;
        border: 1px solid #ddd;
        margin: 5px 0;
        padding: 10px;
    }

        .listitem a {
            text-decoration: none;
            color: #333;
            font-weight: bold;
            font-size: 16px;
        }
</style>

<div id="containerlist">
    <h2>List of Classes</h2>
    <form action="/Class/List" method="GET">
        <input type="text" name="SearchKey" autocomplete="off" />
        <input type="submit" value="Search" />
    </form>
    @foreach (var classObj in Model)
    {
        <div class="listitem row">
            <div class="col-md-12">
                <a href="/Class/Show/@classObj.classid">
                    @classObj.classname - @classObj.classcode
                </a>
            </div>
        </div>
    }
</div>
