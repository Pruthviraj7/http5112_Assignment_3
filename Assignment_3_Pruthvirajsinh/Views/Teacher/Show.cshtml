@model Assignment_3_Pruthvirajsinh.Models.Teacher
@{
    ViewBag.Title = "Show";
}

<style>
    /* Styles for the teacher show page */

    body {
        font-family: 'Arial', sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 0;
    }

    #containershow {
        max-width: 400px;
        margin: auto;
        text-align: center;
        background-color: pink;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
        padding: 20px;
    }

    h2 {
        color: #4CAF50;
        margin-bottom: 10px;
    }

    p {
        font-size: 18px;
        color: #333;
        margin-bottom: 10px;
    }

    .navlink {
        display: inline-block;
        text-align: center;
        text-decoration: none;
        padding: 10px;
        background-color: #007BFF;
        color: #fff;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .navlink:hover {
            background-color: #0056b3; /* Darker color on hover */
        }

    .updateTeacherBtn {
        display: inline-block;
        text-align: center;
        text-decoration: none;
        padding: 10px;
        background-color: #28a745; /* Green color */
        color: #fff;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        margin-right: 1px;
    }

        .updateTeacherBtn:hover {
            background-color: #218838; /* Darker green color on hover */
        }

    #deleteTrigger {
        display: inline-block;
        text-align: center;
        text-decoration: none;
        padding: 10px;
        background-color: #dc3545; /* Red color */
        color: #fff;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        #deleteTrigger:hover {
            background-color: #c82333; /* Darker red color on hover */
        }
</style>

<div id="containershow">
    <h2>@Model.teacherfname @Model.teacherlname</h2>
    <p>Employee Number: @Model.employeenumber</p>
    <p>Salary: @Model.salary</p>
    <!-- Display Hire Date -->
    <p>Hire Date: @Model.HireDate.ToShortDateString()</p>

    <a href="/Teacher/List" class="navlink">Back to List</a>
    <a href="/Teacher/Update/@Model.teacherid" class="updateTeacherBtn">Update Teacher</a>
    <a id="deleteTrigger" href="/Teacher/Delete/@Model.teacherid">Delete Teacher</a>
</div>
